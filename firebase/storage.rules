rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Storage disabled - requires Blaze (paid) plan
    // Will be enabled when upgrading to support profile pictures
    
    match /{allPaths=**} {
      allow read, write: if false; // Block all access for now
    }
  }
}

